generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id                BigInt       @id @default(autoincrement()) @db.UnsignedBigInt
  name              String       @db.VarChar(255)
  nips              String?      @db.VarChar(255)
  email             String       @unique(map: "users_email_unique") @db.VarChar(255)
  phone             String?      @db.VarChar(200)
  level             String       @db.VarChar(255)
  fakultas_id       String?      @default("0") @db.VarChar(255)
  prodi_id          String?      @default("0") @db.VarChar(255)
  status            users_status @default(no)
  email_verified_at DateTime?    @db.Timestamp(0)
  password          String       @db.VarChar(255)
  remember_token    String?      @db.VarChar(100)
  created_at        DateTime?    @db.Timestamp(0)
  updated_at        DateTime?    @db.Timestamp(0)
}

model user_haks {
  hakid      BigInt    @id @unique(map: "user_haks_hakid_unique") @default(autoincrement()) @db.UnsignedBigInt
  modul_id   Int
  user_id    Int
  level      Int
  created_at DateTime? @db.Timestamp(0)
  updated_at DateTime? @db.Timestamp(0)
}

model moduls {
  modul_id     BigInt              @id @default(autoincrement()) @db.UnsignedBigInt
  modul_name   String              @unique(map: "moduls_modul_name_unique") @db.VarChar(255)
  modul_induk  Int
  modul_urut   String              @db.VarChar(255)
  modul_url    String              @db.VarChar(255)
  modul_aktif  moduls_modul_aktif  @default(no)
  modul_simbol String              @db.VarChar(255)
  modul_akses  moduls_modul_akses  @default(Prodi)
  modul_newtab moduls_modul_newtab @default(no)
  modul_id_sms String              @db.VarChar(255)
  created_at   DateTime?           @db.Timestamp(0)
  updated_at   DateTime?           @db.Timestamp(0)
}

model fakultas {
  fakultas_id   BigInt    @id @unique(map: "fakultas_fakultas_id_unique") @default(autoincrement()) @db.UnsignedBigInt
  fakultas_name String    @db.VarChar(255)
  created_at    DateTime? @db.Timestamp(0)
  updated_at    DateTime? @db.Timestamp(0)
}

model mahasiswa {
  nim           String   @id @db.VarChar(20)
  password      String?  @db.VarChar(255)
  nik           String   @db.VarChar(255)
  nama          String   @db.VarChar(255)
  prodi         String   @db.VarChar(100)
  angkatan      String   @db.VarChar(50)
  jenis_kelamin String   @db.VarChar(255)
  tempat_lahir  String   @db.VarChar(255)
  tanggal_lahir DateTime @db.Timestamp(0)
  agama         String   @db.VarChar(255)
  no_hp         String   @db.VarChar(255)
  email         String   @unique(map: "users_email_unique") @db.VarChar(255)
  jalur_masuk   String   @db.VarChar(100)
  alamat        String   @db.VarChar(255)
  provinsi      String   @db.VarChar(100)
  kota          String   @db.VarChar(100)
  kecamatan     String   @db.VarChar(100)
}

model prodi {
  prodi_id         String              @unique(map: "prodi_prodi_id_unique") @db.VarChar(255)
  prodi_name       String              @db.VarChar(255)
  prodi_jenjang    prodi_prodi_jenjang @default(S1)
  prodi_akreditasi String?             @db.VarChar(255)
  fakultas_id      Int
  created_at       DateTime?           @db.Timestamp(0)
  updated_at       DateTime?           @db.Timestamp(0)

  @@index([fakultas_id], map: "fakultas_id")
}

model tahun_ajaran {
  tahun_ajaran_id BigInt                @id @unique(map: "tahun_ajarans_tahun_ajaran_id_unique") @default(autoincrement()) @db.UnsignedBigInt
  tahun_awal      String                @db.VarChar(255)
  start_date      DateTime?             @db.Date
  tahun_akhir     String                @db.VarChar(255)
  end_date        DateTime?             @db.Date
  semester        tahun_ajaran_semester @default(gasal)
  created_at      DateTime?             @db.Timestamp(0)
  updated_at      DateTime?             @db.Timestamp(0)
}

enum users_status {
  no
  yes
}

enum moduls_modul_aktif {
  yes
  no
}

enum moduls_modul_akses {
  Administrator
  Fakultas
  Prodi
  Pengunjung
  Pengguna
  Asesor
}

enum moduls_modul_newtab {
  yes
  no
}

enum prodi_prodi_jenjang {
  S1
  S2
  S3
  D4
  Profesi
}

enum tahun_ajaran_semester {
  gasal
  genap
}
