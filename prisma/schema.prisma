generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
  previewFeatures = ["prismaSchemaFolder"]
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model users {
  id                BigInt       @id @default(autoincrement()) @db.UnsignedBigInt
  name              String       @db.VarChar(255)
  nips              String?      @db.VarChar(255)
  email             String       @unique(map: "users_email_unique") @db.VarChar(255)
  phone             String?      @db.VarChar(200)
  level             String       @db.VarChar(255)
  fakultas_id       String?      @default("0") @db.VarChar(255)
  prodi_id          String?      @default("0") @db.VarChar(255)
  status            users_status @default(no)
  email_verified_at DateTime?    @db.Timestamp(0)
  password          String       @db.VarChar(255)
  remember_token    String?      @db.VarChar(100)
  created_at        DateTime?    @db.Timestamp(0)
  updated_at        DateTime?    @db.Timestamp(0)
}

enum users_status {
  no
  yes
}

model user_haks {
  hakid      BigInt    @id @unique(map: "user_haks_hakid_unique") @default(autoincrement()) @db.UnsignedBigInt
  modul_id   Int
  user_id    Int
  level      Int
  created_at DateTime? @db.Timestamp(0)
  updated_at DateTime? @db.Timestamp(0)
}

model moduls {
  modul_id     BigInt              @id @default(autoincrement()) @db.UnsignedBigInt
  modul_name   String              @unique(map: "moduls_modul_name_unique") @db.VarChar(255)
  modul_induk  Int
  modul_urut   String              @db.VarChar(255)
  modul_url    String              @db.VarChar(255)
  modul_aktif  moduls_modul_aktif  @default(no)
  modul_simbol String              @db.VarChar(255)
  modul_akses  moduls_modul_akses  @default(Prodi)
  modul_newtab moduls_modul_newtab @default(no)
  modul_id_sms String              @db.VarChar(255)
  created_at   DateTime?           @db.Timestamp(0)
  updated_at   DateTime?           @db.Timestamp(0)
}

enum moduls_modul_aktif {
  yes
  no
}

enum moduls_modul_akses {
  Administrator
  Fakultas
  Prodi
  Pengunjung
  Pengguna
  Asesor
}

enum moduls_modul_newtab {
  yes
  no
}